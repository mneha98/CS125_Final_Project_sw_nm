<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutWalk"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/labelWalk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="WALK!"
        android:textSize="40sp" />

    <LinearLayout
        android:id="@+id/layoutCalories"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/labelBurn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|center_vertical"
            android:text="You can burn 0 calories"
            android:textSize="20sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/labelWalkTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="It will take you 0 minutes"
        tools:visibility="visible" />

</LinearLayout>